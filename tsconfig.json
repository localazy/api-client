{
  "compilerOptions": {
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "target": "ES5",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "lib": [
      "DOM",
      "ES2023"
    ],
    "baseUrl": "src",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "types": [
      "@types/lodash-es",
      "@types/jest"
    ]
  },
  "include": [
    "src",
    "tests",
    ".eslintrc.js",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
