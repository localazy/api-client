{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "noEmit": true,
    "rootDir": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "include": [
    ".github/scripts",
    "scripts",
    "package.json",
    "*.ts",
    "*.cts",
    "*.mts",
    "*.d.ts",
    "*.d.cts",
    "*.d.mts",
    "*.tsx",
    "*.js",
    "*.cjs",
    "*.mjs"
  ]
}
